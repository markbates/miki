<h1>Listing Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Display Name</th>
    <th>Created at</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%= user.username %></td>
    <td><%= mail_to(user.email) %></td>
    <td><%= user.display_name %></td>
    <td><%= user.created_at %></td>
    <td><%= link_to("Show", users_show_url(:id => user)) %></td>
    <% if user == current_user -%>
      <td><%= link_to("Edit", users_edit_url(:id => user)) %></td>
    <% else -%>
      <td>&nbsp;</td>
    <% end -%>
  </tr>
<% end %>
</table>

<br />

<%= link_to("New User", users_new_url) %>
